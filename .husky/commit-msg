#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run commitlint
if ! pnpm dlx commitlint --edit $1; then
    echo "\033[0;31m커밋 메시지 오류:\033[0m"
    echo "커밋 메시지가 지정된 규칙을 따르지 않습니다. 다음 가이드라인을 참고해주세요:"
    echo ""
    echo "1. 커밋 메시지는 다음 형식을 따라야 합니다: <type>: <description>"
    echo "2. 유효한 타입: feat, fix, docs, style, refactor, test, release, ui, chore, ci, build"
    echo "3. 설명의 첫 글자는 대문자로 시작하지 않아야 합니다"
    echo "4. 설명 끝에 마침표(.)를 붙이지 않아야 합니다"
    echo ""
    echo "예시: feat: add login functionality"
    echo ""
    exit 1
fi